 <Node name="Triangles 0">
    <MechanicalObject name="dofs" template="Rigid" position="-5 3 10 0 0 0 1" velocity="0 -10 0 0 0 0" />
    <RigidMass mass="1" inertia="1 1 1" />
    <Node name="collision">
      <MeshObjLoader name="loader" filename="mesh/cube.obj" />
