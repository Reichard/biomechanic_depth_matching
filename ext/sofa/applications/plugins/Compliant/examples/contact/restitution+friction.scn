      <TTriangleModel template="Vec3d" contactFriction="0" contactRestitution="0.75"/>
      <RigidMapping input="@../" template="Rigid,Vec3d" output="@./" />
    </Node>
  </Node>
  
 <Node name="Triangles 0.5">
    <MechanicalObject name="dofs" template="Rigid" position="-5 3 0 0 0 0 1" velocity="0 -10 0 0 0 0" />
    <RigidMass mass="1" inertia="1 1 1" />
